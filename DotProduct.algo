PROCEDURE dot_product(V1:ARRAY_OF INTEGER[VAR N:INTEGER],V2:ARRAY_OF INTEGER[N])
VAR
    i,j:INTEGER;
    Prod:INTEGER=0;
BEGIN
    Read(N);
    FOR i FROM 0 TO N-1 DO
        FOR j FROM 0 TO N-1  DO
            Prod:=V1[i]*V2[j]
        END_FOR
    END_FOR
END

